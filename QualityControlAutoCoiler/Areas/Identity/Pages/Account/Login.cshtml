<body data-col="1-column" class=" 1-column  blank-page">
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <div class="wrapper">
        <div class="main-panel">
            <!-- BEGIN : Main Content-->
            <div class="main-content">
                <div class="content-wrapper">
                    <!--Login Page Starts-->
                    <section id="login">
                        <form id="account" method="post">
                            <div class="container-fluid">
                                <div class="row full-height-vh m-0">
                                    <div class="col-12 d-flex align-items-center justify-content-center">
                                        <div class="card">
                                            <div class="card-content">
                                                <div class="card-body login-img">
                                                    <div class="row m-0">
                                                        @* <div class="col-lg-6 d-lg-block d-none py-2 text-center align-middle">
                                                            <img src="~/app-assets/img/gallery/login.jpg" alt="" class="img-fluid mt-5" width="200" height="230">
                                                        </div> *@
                                                        <div class="col-lg-12 col-md-12 bg-white px-4 pt-3">
                                                            <h4 class="mb-2 card-title">Login</h4>
                                                            <p class="card-text mb-3">
                                                                Welcome back, please login to your account.
                                                            </p>
                                                            <form method="post" asp-action="Login" autocomplete="on">
                                                                <!-- Email Input -->
                                                                <input asp-for="Input.Email" class="form-group form-control mb-3" type="email"  autocomplete="username" placeholder="Email Address" />
                                                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                                                                <!-- Password Input -->
                                                                <input asp-for="Input.Password" class="form-group form-control mb-1" type="password" autocomplete="current-password" placeholder="Password" />
                                                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                                                                <!-- Remember Me Checkbox -->
                                                              @*   <div class="d-flex justify-content-between mt-2">
                                                                    <div class="remember-me">
                                                                        <div class="custom-control custom-checkbox custom-control-inline mb-3">
                                                                            <input asp-for="Input.RememberMe" id="RememberMe" class="form-group custom-control-input" />
                                                                            <label class="custom-control-label" for="RememberMe">
                                                                                Remember Me
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </div> *@
                                                                </br>
                                                                <!-- Login Button -->
                                                                <div class="fg-actions d-flex justify-content-between">
                                                                    <div class="login-btn">
                                                                    </div>
                                                                    <div class="form-group recover-pass">
                                                                        <button type="submit" class="btn btn-primary">Login</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                            <hr class="m-0">
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                    <!--Login Page Ends-->
                </div>
            </div>
            <!-- END : End Main Content-->
        </div>
    </div>
