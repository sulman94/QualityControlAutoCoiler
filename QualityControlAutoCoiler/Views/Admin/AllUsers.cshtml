@model Entities.ViewModels.AppUser
@{
    ViewData["Title"] = "Register User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" id="EditUser" action="/Admin/EditUser">   
</form>
<form method="post" id="ViewUser" action="/Admin/ViewUser">    
</form>
<!-- BEGIN : Main Content-->
<div class="main-content">
    <div class="content-wrapper">
        <div class="row d-flex align-items-center pt-3">
            <div class="col-sm-12 col-md-6">
                <div class="content-header m-0">ALL USERS</div>
                <p class="content-sub-header m-0">List of all employees</p>
            </div>
            <div class="col-sm-12 col-md-6 text-right">
                <button id="AddUser" type="button" class="btn btn-outline-success m-0" onclick="location.href='@Url.Action("CreateUser", "Admin")'"><i class="fa fa-plus-circle"></i> Add Users</button>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <table class="table table-striped table-bordered" Id="AllUsers">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ScriptDataTable" />
    <partial name="_ScriptSweetAlert" />
    <script src="~/Scripts/CommonJS.js"></script>
    <script src="~/Scripts/Admin.js"></script>
}